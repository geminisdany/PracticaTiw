		<class>kiwisoft.dominios.Cliente</class>
		<class>kiwisoft.dominios.Direccion</class>
		<class>kiwisoft.dominios.Factura</class>
		<class>kiwisoft.dominios.Pedido</class>
		<class>kiwisoft.dominios.Producto</class>
		<class>kiwisoft.dominios.Proveedor</class>
		<class>kiwisoft.dominios.Suscripcion</class>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
